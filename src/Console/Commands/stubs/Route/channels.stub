
Broadcast::channel(
    config('sanctumauthstarter.channels.access_token',
        'access.token.{userUUID}'),
function ($user, $userUUID) {
    $id = \Ikechukwukalu\Sanctumauthstarter\Models\SocialiteUserDeviceLogin::where('user_uuid', $userUUID)
            ->first()->user_id;

    return $user->id === $id;
});
